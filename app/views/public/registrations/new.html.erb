<div class=" container">
  <div class="row">
    <div class="col-lg-2">
<h3>新規会員登録</h3>
</div>
  </div>
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
      <table class="customer_sign_up">
          <tr>
            <th>名前</th>

            <td>
              <span>(姓) </span>
            </td>
            <td>
              <%= f.text_field :last_name,autofocus: true, autocomplete: "first_name", placeholder: "令和" %>
              <span>　(名)　</span>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "last_name", placeholder: "道子" %>
            </td>
          </tr>

          <tr>
            <th>フリガナ</th>
            <td>
              <span>(セイ)</span>
            </td>

            <td>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "kana_first_name", placeholder: "レイワ" %>
              <span>　(メイ)</span>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "kana_last_name", placeholder: "ミチコ" %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>

            <td>
            </td>

            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
            </td>
          </tr>
          <tr>
            <th>郵便番号(ハイフンなし)</th>

            <td>
            </td>

            <td>
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postcode", placeholder: "0000000" %>
            </td>
          </tr>
          <tr>
            <th>住所</th>

            <td>
            </td>

            <td>
              <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0" %>
            </td>
          </tr>
          <tr>
            <th>電話番号(ハイフンなし)</th>

            <td>
            </td>

            <td>
              <%= f.phone_field :telephone_number, autofocus: true, autocomplete: "phone_number", placeholder: "00000000000" %>
            </td>
          </tr>
          <tr>
            <th>パスワード(6文字以上)</th>

            <td>
            </td>

            <td>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <th>パスワード(確認用)</th>

            <td>
            </td>
            
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
          </tr>
        </table>
        <div class="submit">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3">
      <h3>既に登録済みの方</h3>
      <%= link_to "こちら", new_customer_session_path %> からログインしてください。
    </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "(姓)" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>
  
  <!-- text_fieldはテキストボックスというform_tagのこと。rails viewファイルコメントアウトで検索。-->
  
  <div class="field">
    <%= f.label "(名)" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
  
  <div class="field">
    <%= f.label "(セイ)" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>
  
  <div class="field">
    <%= f.label "(メイ)" %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
  
  <div class="field">
    <%= f.label "住所" %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  
  <div class="field">
    <%= f.label "電話番号(ハイフンなし)" %><br />
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<footer>
  <p>既に登録済みの方<p><br />
    <%= link_to "こちら", new_customer_session_path %> からログインしてください。
     <%= render "public/shared/links" %>
</footer>
