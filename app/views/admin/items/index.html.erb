<div class="container">
	<div class="row">
		<div class="col-lg-3">
<h3>商品一覧</h3>
</div>
<div class="col-lg-8">
				<%= link_to new_admin_item_path do %>
					<span class="item-plus"><i class="fas fa-plus-circle"></i></span>
				<% end %>
<div class="col-lg-offset-1 col-lg-10">
			<table class="table">
			<tr class="active" style="font-weight: bold">
			  <td>商品ID</td>
				<td>商品名</td>
				<td>税抜価格</td>
			</tr>
			<br>
<% @item.each do |item| %>
  <tr>
    <td><%= item.id %></td>
		<td><%= link_to item.name, admin_item_path(item) %></td>
		<td><%= item.price %></td>
  </tr>

<% end %>
</table>
</div>
</div>
<div class="col-lg-12">
<%= paginate @item %>
</div>
</div>